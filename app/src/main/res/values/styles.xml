<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="btn_resume_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_resume_background</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:textColor">@color/btn_resume_text_color</item>
        <item name="android:text">@string/resume</item>
        <item name="android:enabled">false</item>
        <item name="layout_constraintHeight_percent">0.062</item>
    </style>

    <style name="skip_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/skip</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="layout_constraintHeight_percent">0.068</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>
    
    <style name="title_fragments">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/nauryz_red_keds</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="layout_constraintWidth_percent">0.881</item>
        <item name="layout_constraintHeight_percent">0.15</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">32sp</item>
        <item name="autoSizeMaxTextSize">44sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>
    
    <style name="tv_running_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">-10dp</item>
        <item name="android:layout_marginEnd">-10dp</item>
        <item name="android:background">@color/bg_text_description</item>
    </style>
    
    <style name="text_specializations">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_for_text_specializations</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="layout_constraintHeight_percent">0.045</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">4sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>
</resources>