<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.form.specialization.SpecializationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.176" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_logo_specialization_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_margin"/>

    <TextView
        android:id="@+id/tv_suit"
        style="@style/title_fragments"
        android:layout_marginTop="10dp"
        android:text="@string/whos_by_suit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <FrameLayout
        android:id="@+id/text_horizontal_scroll"
        style="@style/tv_running_line"
        android:layout_marginTop="35dp"
        android:rotation="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_description_for_specialization_fragment"
            android:textColor="@color/text_description" />

    </FrameLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_specialization"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="tv_art_director,tv_illustrator,tv_3d_designer,tv_web_designer,tv_game_designer,tv_artist,tv_graphic_designer,tv_interior_designer,tv_ui_designer,tv_fashion_designer,tv_print_designer,tv_presentation_designer,tv_communication_designer,tv_brand_designer,tv_landscape_designer,tv_designer,tv_product_designer,tv_ux_ui_designer,tv_industrial_designer,tv_fpx_designer,tv_ai_designer,tv_ar_vr_designer,tv_motion_designer,tv_smm_designer"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintStart_toStartOf="@id/tv_suit"
        app:layout_constraintEnd_toEndOf="@id/tv_suit"
        app:layout_constraintBottom_toTopOf="@id/btn_resume" />

    <TextView
        android:id="@+id/tv_art_director"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.3"
        android:text="@string/art_director" />

    <TextView
        android:id="@+id/tv_illustrator"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.3"
        android:text="@string/illustrator" />

    <TextView
        android:id="@+id/tv_3d_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.3"
        android:text="@string/three_d_designer" />

    <TextView
        android:id="@+id/tv_web_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.3"
        android:text="@string/web_designer" />

    <TextView
        android:id="@+id/tv_game_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.3"
        android:text="@string/game_designer" />

    <TextView
        android:id="@+id/tv_artist"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.3"
        android:text="@string/artist" />

    <TextView
        android:id="@+id/tv_graphic_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.42"
        android:text="@string/graphic_designer" />

    <TextView
        android:id="@+id/tv_interior_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.49"
        android:text="@string/interior_designer" />

    <TextView
        android:id="@+id/tv_ui_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.49"
        android:text="@string/ui_designer" />

    <TextView
        android:id="@+id/tv_fashion_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.42"
        android:text="@string/fashion_designer" />

    <TextView
        android:id="@+id/tv_print_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.44"
        android:text="@string/print_designer" />

    <TextView
        android:id="@+id/tv_presentation_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.47"
        android:text="@string/presentation_designer" />

    <TextView
        android:id="@+id/tv_communication_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.5"
        android:text="@string/communication_designer" />

    <TextView
        android:id="@+id/tv_brand_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.4"
        android:text="@string/brand_designer" />

    <TextView
        android:id="@+id/tv_landscape_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.47"
        android:text="@string/landscape_designer" />

    <TextView
        android:id="@+id/tv_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.44"
        android:text="@string/designer" />

    <TextView
        android:id="@+id/tv_product_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.48"
        android:text="@string/product_designer" />

    <TextView
        android:id="@+id/tv_ux_ui_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.43"
        android:text="@string/ux_ui_designer" />

    <TextView
        android:id="@+id/tv_industrial_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.5"
        android:text="@string/industrial_designer" />

    <TextView
        android:id="@+id/tv_fpx_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.41"
        android:text="@string/fpx_designer" />

    <TextView
        android:id="@+id/tv_ai_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.43"
        android:text="@string/ai_designer" />

    <TextView
        android:id="@+id/tv_ar_vr_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.48"
        android:text="@string/ar_vr_designer" />

    <TextView
        android:id="@+id/tv_motion_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.45"
        android:text="@string/motion_designer" />

    <TextView
        android:id="@+id/tv_smm_designer"
        style="@style/text_specializations"
        app:layout_constraintWidth_percent="0.46"
        android:text="@string/smm_designer" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_resume"
        style="@style/btn_resume_style"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_suit"
        app:layout_constraintStart_toStartOf="@id/tv_suit" />

</androidx.constraintlayout.widget.ConstraintLayout>