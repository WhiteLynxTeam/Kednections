<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <View
        android:id="@+id/view_purpose"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_auth_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/view_purpose"
        app:layout_constraintTop_toTopOf="@id/view_purpose"
        app:layout_constraintBottom_toBottomOf="@id/view_purpose"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/text_description"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/view_purpose"
        app:layout_constraintBottom_toBottomOf="@id/view_purpose"
        app:layout_constraintEnd_toStartOf="@id/checkbox_purpose"/>


    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:visibility="gone"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/color_2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toBottomOf="@id/view_purpose"
        app:layout_constraintEnd_toStartOf="@id/checkbox_purpose"/>


    <CheckBox
        android:id="@+id/checkbox_purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:buttonTint="@color/checkbox_color_selector"
        app:layout_constraintTop_toTopOf="@id/view_purpose"
        app:layout_constraintEnd_toEndOf="@id/view_purpose"
        app:layout_constraintBottom_toBottomOf="@id/view_purpose"/>

</androidx.constraintlayout.widget.ConstraintLayout>