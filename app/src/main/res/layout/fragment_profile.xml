<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/orange"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_notification" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/specialization_scroll"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <View
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:background="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="-20dp"
                android:src="@drawable/img_ava_8_selected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/nauryz_red_keds"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/text_description"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_avatar" />

            <ImageView
                android:id="@+id/ic_geo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_geo_feed"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:tint="@color/color_4" />

            <TextView
                android:id="@+id/tv_geo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Санкт-Петербург"
                android:textColor="@color/color_4"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/ic_geo"
                app:layout_constraintStart_toEndOf="@id/ic_geo"
                app:layout_constraintTop_toTopOf="@id/ic_geo" />

            <TextView
                android:id="@+id/tv_specializations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nauryz_red_keds"
                android:includeFontPadding="false"
                android:lineHeight="24dp"
                android:text="UX/UI-дизайнер . Веб-дизайнер\nграфический дизайнер"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/ic_geo"
                app:layout_constraintTop_toBottomOf="@id/ic_geo" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <View
                android:id="@+id/view_purposes"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintWidth_percent="0.389"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_auth_input"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@id/tv_specializations" />

            <ImageView
                android:id="@+id/ic_purposes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_purposes"
                app:layout_constraintStart_toStartOf="@id/view_purposes"
                app:layout_constraintTop_toTopOf="@id/view_purposes"
                app:layout_constraintEnd_toEndOf="@id/view_purposes"
                app:layout_constraintBottom_toTopOf="@id/tv_purposes"/>

            <TextView
                android:id="@+id/tv_purposes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="мои цели"
                app:layout_constraintStart_toStartOf="@id/view_purposes"
                app:layout_constraintTop_toBottomOf="@id/ic_purposes"
                app:layout_constraintBottom_toBottomOf="@id/view_purposes"
                app:layout_constraintEnd_toEndOf="@id/view_purposes"/>

            <View
                android:id="@+id/view_connection"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintWidth_percent="0.389"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/view_purposes"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/ic_connection"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_online_selected"
                app:layout_constraintStart_toStartOf="@id/view_connection"
                app:layout_constraintTop_toTopOf="@id/view_connection"
                app:layout_constraintEnd_toEndOf="@id/view_connection"
                app:layout_constraintBottom_toTopOf="@id/tv_connection"/>

            <TextView
                android:id="@+id/tv_connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="только онлайн"
                app:layout_constraintStart_toStartOf="@id/view_connection"
                app:layout_constraintTop_toBottomOf="@id/ic_connection"
                app:layout_constraintBottom_toBottomOf="@id/view_connection"
                app:layout_constraintEnd_toEndOf="@id/view_connection"/>

            <View
                android:id="@+id/view_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:background="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_purposes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/profile_switcher"
                android:layout_width="0dp"
                android:layout_height="32dp"
                app:layout_constraintWidth_percent="0.45"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_profile_switcher_top"
                app:layout_constraintTop_toTopOf="@id/view_bottom"
                app:layout_constraintEnd_toStartOf="@id/guideline_horizontal_center"/>

            <ImageView
                android:id="@+id/design_showcase_switcher"
                android:layout_width="0dp"
                android:layout_height="32dp"
                app:layout_constraintWidth_percent="0.45"
                android:src="@drawable/ic_design_showcase_switcher_bottom"
                app:layout_constraintTop_toTopOf="@id/profile_switcher"
                app:layout_constraintStart_toEndOf="@id/guideline_horizontal_center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_base"
                style="@style/profile_buttons"
                android:layout_marginTop="32dp"
                app:layout_constraintWidth_percent="0.611"
                android:visibility="visible"
                android:background="@drawable/btn_resume_background"
                android:text="база"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_switcher"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_specialization"
                style="@style/profile_buttons"
                android:rotation="-3"
                app:layout_constraintWidth_percent="0.911"
                android:visibility="visible"
                android:background="@drawable/btn_profile_ripple"
                android:text="специализация"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_base"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_interests"
                style="@style/profile_buttons"
                app:layout_constraintWidth_percent="0.611"
                android:visibility="visible"
                android:background="@drawable/btn_resume_background"
                android:text="интересы"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_specialization"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_about"
                style="@style/profile_buttons"
                app:layout_constraintWidth_percent="0.911"
                android:visibility="visible"
                android:background="@drawable/btn_resume_background"
                android:text="о себе"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_interests"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_portfolio"
                style="@style/profile_buttons"
                app:layout_constraintWidth_percent="0.911"
                android:visibility="visible"
                android:rotation="-3"
                android:background="@drawable/btn_profile_ripple"
                android:text="портфолио"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_about"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_tests"
                style="@style/profile_buttons"
                app:layout_constraintWidth_percent="0.611"
                android:visibility="visible"
                android:background="@drawable/btn_resume_background"
                android:text="тесты"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_portfolio"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_settings"
                style="@style/profile_buttons"
                app:layout_constraintWidth_percent="0.911"
                android:visibility="visible"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_resume_background"
                android:text="настройки"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_tests"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/view_bottom"/>

            <ImageView
                android:id="@+id/bg_showcase_null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:src="@drawable/bg_design_showcase_null"
                app:layout_constraintTop_toBottomOf="@id/profile_switcher"
                app:layout_constraintBottom_toTopOf="@id/btn_edit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit"
                style="@style/profile_buttons"
                app:layout_constraintWidth_percent="0.911"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_resume_background"
                android:text="редактировать"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/view_bottom"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_view_img"
                android:layout_width="match_parent"
                android:layout_height="294dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/profile_switcher"
                app:layout_constraintBottom_toTopOf="@id/btn_edit"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>