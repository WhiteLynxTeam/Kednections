<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.form.avatar.AvatarFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.209" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_title_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.051" />

    <ImageView
        android:id="@+id/img_logo"
        style="@style/img_logo"
        android:src="@drawable/img_logo_avatar_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_margin"/>

    <TextView
        android:id="@+id/tv_face"
        style="@style/title_fragments"
        android:text="@string/face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_title_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_yellow_text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.115" />

    <FrameLayout
        android:id="@+id/text_horizontal_scroll"
        style="@style/tv_running_line"
        android:rotation="-3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_yellow_text_margin">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_description_for_avatar_fragment"
            android:textColor="@color/text_description"
            />

    </FrameLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:constraint_referenced_ids="add_ava,ava_1,ava_2,ava_3,ava_4,ava_5,ava_6,ava_7,ava_8"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="spread_inside"
        app:flow_verticalGap="12dp"
        app:layout_constraintStart_toStartOf="@id/tv_face"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintBottom_toTopOf="@id/btn_resume"
        app:layout_constraintEnd_toEndOf="@id/tv_face"/>

    <FrameLayout
        android:id="@+id/add_ava"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278">
        <ImageView
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_bg_add_avatar"
            app:layout_constraintWidth_percent="0.28"/>
        <ImageView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_24"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/ava_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_1"
        />

    <ImageView
        android:id="@+id/ava_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_2"/>

    <ImageView
        android:id="@+id/ava_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_3"/>

    <ImageView
        android:id="@+id/ava_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_4"/>

    <ImageView
        android:id="@+id/ava_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_5"/>

    <ImageView
        android:id="@+id/ava_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_6"/>

    <ImageView
        android:id="@+id/ava_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_7"/>

    <ImageView
        android:id="@+id/ava_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.151"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_btn_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.813" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_resume"
        style="@style/btn_resume_style"
        android:enabled="true"
        app:layout_constraintEnd_toEndOf="@id/tv_face"
        app:layout_constraintStart_toStartOf="@id/tv_face"
        app:layout_constraintTop_toTopOf="@id/guideline_btn_margin" />

    <TextView
        android:id="@+id/skipped"
        style="@style/skip_btn"
        app:layout_constraintStart_toStartOf="@id/btn_resume"
        app:layout_constraintTop_toBottomOf="@id/btn_resume"
        app:layout_constraintEnd_toEndOf="@id/btn_resume"/>


</androidx.constraintlayout.widget.ConstraintLayout>