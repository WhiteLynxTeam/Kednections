<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.profile.choosing_avatar.ChoosingAvatarFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.088"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/ic_arrow_left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.102" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_title_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.135" />

    <ImageView
        android:id="@+id/img_logo"
        style="@style/img_logo"
        android:src="@drawable/img_logo_avatar_fragment"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_image_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_face"
        style="@style/title_fragments"
        android:text="@string/face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_title_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_yellow_text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <FrameLayout
        android:id="@+id/text_horizontal_scroll"
        style="@style/tv_running_line"
        android:rotation="-3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_yellow_text_margin">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="выбери свой drip"
            android:textColor="@color/text_description"
            />

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_flow_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.304" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_specializations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintWidth_percent="0.911"
        app:layout_constraintHeight_percent="0.451"
        app:constraint_referenced_ids="ava_9,ava_1,ava_2,ava_3,ava_4,ava_5,ava_6,ava_7,ava_8"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="spread_inside"
        app:flow_verticalGap="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_flow_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save"/>

    <ImageView
        android:id="@+id/ava_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_ava_9"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"/>

    <ImageView
        android:id="@+id/ava_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_1"
        />

    <ImageView
        android:id="@+id/ava_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_2"/>

    <ImageView
        android:id="@+id/ava_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_3"/>

    <ImageView
        android:id="@+id/ava_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_4"/>

    <ImageView
        android:id="@+id/ava_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_5"/>

    <ImageView
        android:id="@+id/ava_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_6"/>

    <ImageView
        android:id="@+id/ava_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_7"/>

    <ImageView
        android:id="@+id/ava_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintHeight_percent="0.137"
        app:layout_constraintWidth_percent="0.278"
        android:src="@drawable/img_ava_8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_btn_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.901" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        style="@style/btn_resume_style"
        android:text="сохранить"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@id/flow_specializations"
        app:layout_constraintStart_toStartOf="@id/flow_specializations"
        app:layout_constraintTop_toTopOf="@id/guideline_btn_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>